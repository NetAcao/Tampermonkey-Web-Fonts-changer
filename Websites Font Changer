// ==UserScript==
// @name         Websites Font Changer - Cousine on Google Fonts
// @namespace    http://tampermonkey.net/
// @version      0.5.0
// @description  Intelligently changes website fonts to Cousine while preserving icons and math equations. Forked from NetAcao's Montserrat script (https://github.com/NetAcao)
// @author       Yngvildr The Voracious
// @match        *://*/*
// @grant        GM_addStyle
// @grant        GM_getResourceText
// @resource     customCSS https://fonts.googleapis.com/css2?family=Cousine:ital,wght@0,400;0,700;1,400;1,700&display=swap
// @run-at       document-start

// ==/UserScript==

(function() {
    'use strict';

    // Load font
    const newCSS = GM_getResourceText("customCSS");
    GM_addStyle(newCSS);

    // Define the new font family
    const newFont = '"Cousine", monospace';

    // Whitelist of classes and elements to ignore
    const whitelist = [
        '.fa', '.fas', '.far', '.fal', '.fad', // Font Awesome
        '.material-icons', // Material Icons
        '.katex', '.MathJax', // Math equations
        'code', 'pre' // Code snippets
    ].join(', ');

    // Create a style element
    const style = document.createElement('style');
    style.type = 'text/css';
    style.innerHTML = `
        /* Change font for most elements */
        body, p, h1, h2, h3, h4, h5, h6, a, span, div, table, colgroup, tbody, tr, td, ul, ol, li {
            font-family: ${newFont} !important;
        }

        /* Preserve original font for whitelisted elements */
        ${whitelist} {
            font-family: inherit !important;
        }
    `;

    // Insert the style element into the document
    document.head.appendChild(style);

    // Optional: Log to console that the script has run
    console.log('Enhanced Font Changer script has been applied (Google Fonts version)');
})();
